@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

/* latin */
@font-face {
  font-family: 'Open Sans';
  font-style: normal;
  font-weight: 400;
  src: local('Open Sans'), local('OpenSans'), url(http://fonts.gstatic.com/s/opensans/v11/cJZKeOuBrn4kERxqtaUH3YX0hVgzZQUfRDuZrPvH3D8.woff2) format('woff2');
}

/* latin */
@font-face {
  font-family: 'Open Sans';
  font-style: normal;
  font-weight: 700;
  src: local('Open Sans Bold'), local('OpenSans-Bold'), url(http://fonts.gstatic.com/s/opensans/v11/k3k702ZOKiLJc3WVjuplzBVuXpl7XtNjpLlhhhGlVqc.woff2) format('woff2');
}

@import url("//fonts.googleapis.com/css?family=Open+Sans:400,700");

@font-face {
  font-family: 'Avenir Black';
  font-style: normal;
  font-weight: 600;
  src: url("/fonts/aebl____-webfont.eot?#iefix") format("embedded-opentype"),local(Avenir),local(AvenirBlack),url("fonts/aebl____-webfont.woff") format("woff"),url("/fonts/aebl____-webfont.ttf") format("truetype"),url("/fonts/aebl____-webfont.svg#webfont6nDbHWrl") format("svg");
}

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

body
  background: color-background
  font-family: "Open Sans"
  font-size: font-size
  padding-top: header-height

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

.coolblue-dot
  color: color-orange

.course-item .language-tag
  color: color-white
  background-color: color-blue
  font-family: font-open-sans
  font-size: 45px
  font-weight: bold

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  .mobile-nav-on &
    left: mobile-nav-width

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  #main
    float: right

