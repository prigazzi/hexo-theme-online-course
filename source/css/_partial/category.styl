.category--header
	padding: 20px 0

.category--panel
	border-radius: 0 !important

.category--panel,
.list-group,
.list-group-item
	border-width: 0 !important

.list-group-item
	height: 120px
	padding: 0 article-padding

.list-group-item:nth-child(2n+1)
	background-color: color-grey

.course--status,
.course--link
	text-align: center
	vertical-align: middle !important

.course--status-icon,
.lesson-item--link
	max-width: 50px
	display: inline-block

.course--lesson-number,
.course--quize-number
	display: inline-block
	padding: 1.5em
	width: 3em
	position: relative
	background-color: color-blue
	span
		position: absolute
		left: 0
		right: 0
		top: 0
		font-size: 2em
		font-weight: bold
		line-height: inherit
		color: white
		text-align: center

.course--quize-number
	width: 1em

.lesson-item--link
	display: block
	height: 30px
	width: 100%
	background-image: url(/images/navigation/Navigation_ForwardBlue_Normal.png)
	background-repeat: no-repeat
	background-size: contain
	&:hover
		background-image: url(/images/navigation/Navigation_ForwardBlue_MouseOver.png)
	&:visited
		background-image: url(/images/navigation/Navigaton_ForwardBlue_Pressed.png)